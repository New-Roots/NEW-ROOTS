<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Product title here"
        android:id="@+id/product_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/articleBar"
        android:gravity="center"
        android:background="@color/articleBar"
        android:textColor="@color/black"
        android:fontFamily="cursive"
        android:padding="@dimen/button_padding"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:id="@+id/product_image"
        android:src="@drawable/agri"
        android:layout_below="@+id/product_title"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_marginTop="@dimen/button_padding"
        android:src="@drawable/ic_group_black_48dp"
        android:layout_width="wrap_content"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_below="@+id/product_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="seller info"
        android:id="@+id/seller_details"
        android:layout_below="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PRICE : RS 450/box"
        android:id="@+id/product_price"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:rating="4"
        android:layout_below="@+id/product_price"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="@dimen/button_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description "
        android:id="@+id/desc_heading"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="this product is so and so so and so so so so and soso so and so so and so soso and so soso and so soso and so soso and so soso and so soso and so soso and so soso and so soso and so soso and so soso and so soso and so soso and so soso and so soso and so so"
        android:id="@+id/desc_content"
        android:layout_below="@+id/desc_heading"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/desc_content"
        android:layout_centerHorizontal="true">


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Reviews : "
            android:id="@+id/review_list_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A list of reviews about the product"
            android:id="@+id/review1"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/button_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout6">


        <Button
            android:padding="@dimen/button_padding"
            android:layout_margin="2dp"
            android:background="@drawable/round_corner_articlepost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Online"
            android:id="@+id/order_online_button"
            android:layout_weight="1"/>

        <Button
            android:layout_margin="2dp"
            android:padding="@dimen/button_padding"
            android:background="@drawable/round_corner_articlepost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order via phone"
            android:id="@+id/order_by_phone"
            android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>
</ScrollView>